@model kartverket2025.Models.ViewModels.ChangePasswordViewModel

<link rel="stylesheet" href="~/css/login.css" />
<div class="register-bg"></div>
<div class="login-outer">
    <div class="login-card register-card">
        <h1 class="login-title">Change Password</h1>
        <form method="post" asp-controller="Account" asp-action="ChangePassword">
            <p class="login-subtitle">Update your password</p>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OldPassword" class="form-label">Current Password</label>
                <input asp-for="OldPassword" type="password" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="form-label">New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button class="btn login-btn" type="submit">Change Password</button>
            <div style="text-align:center;">
                <a asp-action="Index" asp-controller="Home" style="color:#a18cd1; font-weight:600; font-size:0.98rem; text-decoration:none;">
                    Back to Home
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}