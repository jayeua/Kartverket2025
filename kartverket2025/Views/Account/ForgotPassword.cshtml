@model kartverket2025.Models.ViewModels.ForgotPasswordViewModel

<link rel="stylesheet" href="~/css/login.css" />
<div class="register-bg"></div>
<div class="login-outer">
    <div class="login-card register-card">
        <h1 class="login-title">Forgot Password</h1>
        <form method="post" asp-controller="Account" asp-action="ForgotPassword">
            <p class="login-subtitle">Enter your email to reset your password</p>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button class="btn login-btn" type="submit">Send Reset Link</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}