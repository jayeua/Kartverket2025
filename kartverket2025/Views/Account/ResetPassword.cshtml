@model kartverket2025.Models.ViewModels.ResetPasswordViewModel

<link rel="stylesheet" href="~/css/login.css" />
<div class="register-bg"></div>
<div class="login-outer">
    <div class="login-card register-card">
        <h1 class="login-title">Reset Password</h1>
        <form method="post" asp-controller="Account" asp-action="ResetPassword">
            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />
            <p class="login-subtitle">Enter your new password</p>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Password" class="form-label">New Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button class="btn login-btn" type="submit">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}