@model kartverket2025.Models.ViewModels.SettingsViewModel

<link rel="stylesheet" href="~/css/login.css" />
<div class="register-bg"></div>
<div class="login-outer">
    <div class="login-card register-card">
        <h1 class="login-title">Account Settings</h1>
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success" style="text-align:center;">@ViewBag.Message</div>
        }
        <form asp-action="Settings" method="post">
            <div class="form-group">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align:center;">
                <a href="@Url.Action("ChangePassword", "Account")"
                   style="color:#fff; background:linear-gradient(90deg, #a18cd1 0%, #fbc2eb 100%);
                          border:none; border-radius:24px; font-size:1rem; font-weight:700;
                          padding:12px 0; width:100%; box-shadow:0 2px 8px rgba(161,140,209,0.15);
                          display:inline-block; margin-bottom:12px; transition:background 0.2s, box-shadow 0.2s; text-align:center; text-decoration:none;">
                    Change Password
                </a>
            </div>
            <button type="submit" class="btn login-btn" style="width:100%;">Save Changes</button>
        </form>
    </div>
</div>