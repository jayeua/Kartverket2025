@model kartverket2025.Models.ViewModels.MapReportViewModel


<h2>Delete Map Report</h2>

<h3>Are you sure you want to delete this map report?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">RapportID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Beskrivelse</dt>
        <dd class="col-sm-10">@Model.ReportDescription</dd>

        <dt class="col-sm-2">Kommunenavn</dt>
        <dd class="col-sm-10">@Model.ReportKommunenavn</dd>

        <dt class="col-sm-2">Fylkenavn</dt>
        <dd class="col-sm-10">@Model.ReportFylkenavn</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>

<form asp-action="DeleteMapReport" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="AllMapReportsOverview" class="btn btn-secondary">Cancel</a>
</form>
