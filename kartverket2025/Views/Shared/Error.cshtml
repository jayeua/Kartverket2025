@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<head>
    <link rel="stylesheet" href="~/css/report.css" />
</head>

<div class="report-container status-page">
    <div class="report-message-box">
        <h2 class="report-title" style="color:#e052b4;">Error</h2>
        <p style="color:#a259ec; font-size:1.1rem;">
            An error occurred while processing your request.
        </p>
        @if (Model?.ShowRequestId == true)
        {
            <p style="margin-top:1rem;">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }
    </div>
    <div class="report-btn-group">
        <a href="@Url.Action("Index", "Home")" class="report-btn secondary">
            Back to Home
        </a>
    </div>
</div>